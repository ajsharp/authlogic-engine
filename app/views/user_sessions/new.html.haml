- render :layout => 'layouts/users' do

  %h2
    Login
  
  - form_for(@user_session) do |f|
    = f.error_messages(:header_message => nil, :message => 'Please correct the following errors and try again:')
  
    %p
      = f.label :username
      = f.text_field :username
    
    %p
      = f.label :password
      = f.password_field :password
      
    %p
      = f.check_box :remember_me
      = f.label :remember_me, 'Remember me', {:class => 'check_box'}
    
    %p
      = f.submit 'Login'
      
    %p
      %small
        = link_to "Forget your password?", new_password_reset_path